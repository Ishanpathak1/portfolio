---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="container flex flex-col items-center justify-center py-24 text-center">
    <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-3xl md:text-4xl font-bold mb-8">Page Not Found</h2>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-md">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="btn btn-primary">
      Back to Home
    </a>
  </div>
</Layout> 