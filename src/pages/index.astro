---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: 'UnifiedData',
    description: 'AI-powered CSV editor with auto dashboards and reports for data visualization.',
    tags: ['React', 'Python', 'FastAPI', 'Docker'],
    image: '/images/projects/unified-data.png',
    githubUrl: 'https://github.com/Ishanpathak1/UnifiedData',
    liveUrl: 'https://www.unifieddata.app/'
  },
  {
    title: 'AI Resume Editor',
    description: 'Create professional resumes with AI assistance to stand out in your job search.',
    tags: ['React', 'AI', 'TypeScript', 'Tailwind CSS'],
    image: '/images/projects/airesume.png',
    githubUrl: 'https://github.com/Ishanpathak1/ai-resume-editor',
    liveUrl: 'https://ai-resume-editor.vercel.app'
  },
  {
    title: 'Revode',
    description: 'AI memory retention tool for DSA questions to help developers practice efficiently.',
    tags: ['React', 'JavaScript', 'OpenAI API'],
    image: '/images/projects/revode.png',
    githubUrl: 'https://github.com/Ishanpathak1/Revode',
    liveUrl: 'https://revode.vercel.app'
  },
  {
    title: 'Varnatva',
    description: 'Blockchain based comment system, with extension',
    tags: ['Solidity', 'React', 'Javascript', 'HTML','CSS'],
    image: '/images/projects/varnatva.png',
    githubUrl: 'https://github.com/Ishanpathak1',
    liveUrl: 'https://blockchain-comment.vercel.app/'
  }
];
---

<Layout title="Ishan Pathak | Developer Portfolio" description="Full-stack developer and graduate student specializing in React, JavaScript, and AI.">
  <!-- Hero Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="flex flex-col md:flex-row gap-8 md:gap-16 items-center">
        <div class="md:w-2/3">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            Hi, I'm <span class="text-primary">Ishan Pathak</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 mb-6">
            Full-stack developer and Computer Science graduate student with a passion for building AI-powered web applications.
          </p>
          <p class="text-gray-600 dark:text-gray-400 mb-8">
            Currently studying at University at Albany. I specialize in React, JavaScript, and modern web technologies with a focus on creating intuitive and performant user experiences.
          </p>
          <div class="flex gap-4">
            <a href="/projects" class="btn btn-primary">
              View Projects
            </a>
            <a href="/blog" class="btn btn-outline">
              Read Blog
            </a>
          </div>
        </div>
        <div class="md:w-1/3 flex justify-center">
          <div class="relative">
            <div class="w-64 h-64 rounded-full overflow-hidden border-4 border-primary">
              <img 
                src="/images/profile.jpg" 
                alt="Ishan Pathak" 
                class="w-full h-full object-cover"
                onerror="this.src='https://via.placeholder.com/400x400?text=Ishan+Pathak'"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 bg-white dark:bg-gray-800 rounded-full p-3 shadow-md">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">Featured Projects</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <a href="/projects" class="btn btn-outline">
          View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section class="py-16">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">Skills & Technologies</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {[
          'React', 'JavaScript', 'TypeScript', 'HTML5/CSS',
          'Tailwind CSS', 'Next.js', 'Docker', 'FastAPI', 
          'Python', 'AWS', 'Google Cloud', 'UI/UX (Figma)'
        ].map(skill => (
          <div class="flex items-center justify-center p-4 bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <span class="font-medium">{skill}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 bg-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">Interested in working together?</h2>
      <p class="text-xl mb-8 opacity-90">Let's connect and discuss your project!</p>
      <a 
        href="mailto:ishan.pathak2711@gmail.com" 
        class="inline-flex items-center px-6 py-3 bg-white text-primary font-medium rounded-md hover:bg-gray-100 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
        Get In Touch
      </a>
    </div>
  </section>
</Layout>
