---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import GitHubStatsSection from '../components/GitHubStatsSection.astro';

const projects = [
  {
    title: 'UnifiedData',
    description: 'AI-powered CSV editor with auto dashboards and reports for data visualization.',
    tags: ['React', 'Python', 'FastAPI', 'Docker'],
    image: '/images/projects/unified-data.png',
    githubUrl: 'https://github.com/Ishanpathak1/UnifiedData',
    liveUrl: 'https://www.unifieddata.app/'
  },
  {
    title: 'Revode',
    description: 'AI memory retention tool for DSA questions to help developers practice efficiently.',
    tags: ['React', 'JavaScript', 'OpenAI API'],
    image: '/images/projects/revode.png',
    githubUrl: 'https://github.com/Ishanpathak1/Revode',
    liveUrl: 'https://revode.vercel.app'
  },
  {
    title: 'Varnatva',
    description: 'Blockchain based comment system, with extension',
    tags: ['Solidity', 'React', 'Javascript', 'HTML','CSS'],
    image: '/images/projects/varnatva.png',
    githubUrl: 'https://github.com/Ishanpathak1',
    liveUrl: 'https://blockchain-comment.vercel.app/'
  }
];
---

<Layout title="Ishan Pathak - Full Stack Developer">
  <!-- Hero Section -->
  <section id="about" class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Hi, I'm <span class="text-primary">Ishan Pathak</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-700 dark:text-gray-300">
          Full-Stack Developer & Computer Science Graduate Student
        </p>
        <p class="text-lg mb-8 text-gray-600 dark:text-gray-400">
          I build modern web applications with React, JavaScript, and Python.
          Currently focused on AI-powered tools that solve real-world problems.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="#contact" 
            class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
          >
            Get in Touch
          </a>
          <a 
            href="#projects" 
            class="px-6 py-3 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-primary hover:text-primary transition-colors"
          >
            View My Work
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects -->
  <section id="projects" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4 text-center">Featured Projects</h2>
      <p class="text-center text-gray-700 dark:text-gray-300 mb-8">
        Check out some of my recent work
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard
            title={project.title}
            description={project.description}
            image={project.image}
            tags={project.tags}
            githubUrl={project.githubUrl}
            liveUrl={project.liveUrl}
          />
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <a 
          href="/projects" 
          class="px-6 py-3 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-primary hover:text-primary transition-colors"
        >
          View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- GitHub Stats Section -->
  <GitHubStatsSection />
  
  <!-- Skills Section -->
  <section id="skills" class="py-16">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4 text-center">Skills & Technologies</h2>
      <p class="text-center text-gray-700 dark:text-gray-300 mb-8">
        Technologies I work with regularly
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
        {[
          "JavaScript", "TypeScript", "React", "Node.js",
          "Python", "FastAPI", "HTML/CSS", "Tailwind CSS",
          "Git", "Docker", "AWS", "MongoDB",
          "PostgreSQL", "Next.js", "Redux", "REST APIs"
        ].map((skill) => (
          <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm text-center border border-gray-200 dark:border-gray-700">
            {skill}
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4 text-center">Get In Touch</h2>
      <p class="text-center text-gray-700 dark:text-gray-300 mb-8">
        Have a project in mind? Let's talk about it.
      </p>
      
      <div class="max-w-lg mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <form>
          <div class="mb-4">
            <label for="name" class="block text-sm font-medium mb-1">Name</label>
            <input 
              type="text" 
              id="name" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-900"
              required
            />
          </div>
          
          <div class="mb-4">
            <label for="email" class="block text-sm font-medium mb-1">Email</label>
            <input 
              type="email" 
              id="email" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-900"
              required
            />
          </div>
          
          <div class="mb-4">
            <label for="message" class="block text-sm font-medium mb-1">Message</label>
            <textarea 
              id="message" 
              rows="4" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-900"
              required
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full py-2 px-4 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>

