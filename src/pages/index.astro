---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';


const projects = [
  {
    title: 'take-my.info',
    description: 'Transform your resume into a beautiful, shareable portfolio website in one click.',
    tags: ['Next.js', 'React', 'TypeScript', 'Tailwind CSS'],
    image: '/images/projects/portfoliohub.png',
    githubUrl: 'https://github.com/Ishanpathak1/portfoliome',
    liveUrl: 'https://take-my.info'
  },
  {
    title: 'Varnatva',
    description: 'Blockchain based comment system, with extension',
    tags: ['Solidity', 'React', 'Javascript', 'HTML','CSS'],
    image: '/images/projects/varnatva.png',
    githubUrl: 'https://github.com/Ishanpathak1',
    liveUrl: 'https://blockchain-comment.vercel.app/'
  },
  {
    title: 'UnifiedData',
    description: 'AI-powered CSV editor with auto dashboards and reports for data visualization.',
    tags: ['React', 'Python', 'FastAPI', 'Docker'],
    image: '/images/projects/unified-data.png',
    githubUrl: 'https://github.com/Ishanpathak1/UnifiedData',
    liveUrl: 'https://www.unifieddata.app/'
  }
];
---

<Layout title="Ishan Pathak - Full Stack Developer">
  <!-- Hero Section -->
  <section id="about" class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Hi, I'm <span class="text-primary">Ishan Pathak</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-700 dark:text-gray-300">
          Full-Stack Developer & Computer Science Graduate Student
        </p>
        <p class="text-lg mb-8 text-gray-600 dark:text-gray-400">
          I build modern web applications with React, JavaScript, and Python.
          Currently focused on AI-powered tools that solve real-world problems.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <button 
            id="hero-contact-button" 
            class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
          >
            Get in Touch
          </button>
          <a 
            href="#projects" 
            class="px-6 py-3 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-primary hover:text-primary transition-colors"
          >
            View My Work
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects -->
  <section id="projects" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4 text-center">Featured Projects</h2>
      <p class="text-center text-gray-700 dark:text-gray-300 mb-8">
        Check out some of my recent work
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard
            title={project.title}
            description={project.description}
            image={project.image}
            tags={project.tags}
            githubUrl={project.githubUrl}
            liveUrl={project.liveUrl}
          />
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <a 
          href="/projects" 
          class="px-6 py-3 border border-gray-300 dark:border-gray-700 rounded-lg hover:border-primary hover:text-primary transition-colors"
        >
          View All Projects
        </a>
      </div>
    </div>
  </section>
  

  
  <!-- Skills Section -->
  <section id="skills" class="py-16">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4 text-center">Skills & Technologies</h2>
      <p class="text-center text-gray-700 dark:text-gray-300 mb-8">
        Technologies I work with regularly
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
        {[
          "JavaScript", "TypeScript", "React", "Node.js",
          "Python", "FastAPI", "HTML/CSS", "Tailwind CSS",
          "Git", "Docker", "AWS", "MongoDB",
          "PostgreSQL", "Next.js", "Redux", "REST APIs"
        ].map((skill) => (
          <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm text-center border border-gray-200 dark:border-gray-700 hover:border-primary hover:text-primary hover:shadow-md transform hover:-translate-y-1 transition-all duration-300">
            {skill}
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Add any additional page-specific styles here */
</style>

<script>
  // Connect hero contact button to footer contact modal
  document.addEventListener('DOMContentLoaded', () => {
    const heroContactButton = document.getElementById('hero-contact-button');
    const contactModal = document.getElementById('contact-modal');
    
    if (heroContactButton && contactModal) {
      heroContactButton.addEventListener('click', () => {
        contactModal.classList.remove('hidden');
        setTimeout(() => {
          contactModal.style.opacity = '1';
        }, 10);
        document.body.style.overflow = 'hidden';
      });
    }
  });
</script>
